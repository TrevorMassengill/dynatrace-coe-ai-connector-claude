{
  "$schema": "./.dt-app/app.config.schema.json",
  "environmentUrl": "https://DTENVGOESHERE.apps.dynatrace.com/",
  "app": {
    "name": "Claude Connector",
    "version": "0.1.2035",
    "description": "Workflow Connector, sends data and a prompt to Claude to analyze and respond to.",
    "id": "my.coe.ai.connectors.claude",
    "scopes": [
      {
        "name": "storage:logs:read",
        "comment": "default template"
      },
      {
        "name": "storage:buckets:read",
        "comment": "default template"
      },
      {
        "name": "app-settings:objects:read",
        "comment": "To read app settings"
      },
      { "name": "app-settings:objects:read", "comment": "Read app settings" },
      { "name": "app-settings:objects:write", "comment": "Read app settings" },
      { "name": "automation:workflows:read", "comment": "Read app settings" }
    ],
    "actions": [
      {
        "name": "claude",
        "title": "Claude",
        "description": "Change description in the app.config.json"
      }
    ],
    "icon": "app-icon-claude.svg",
    "hidden": true
  },
  "plugins": ["@dynatrace-sdk/dt-app-plugin-client-app-settings-v2"]
}
